generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Services {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  published Boolean
  title     String
  about     String
  city      String
  category  String
  thumbnail String
  offers    String[]
  images    String[]
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String   @db.ObjectId
}

model User {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  email    String     @unique
  name     String?
  services Services[]
}
